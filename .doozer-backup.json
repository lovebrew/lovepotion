{
  "targets": {
    "lovepotion": {
      "buildenv": "xenial-amd64",
      "builddeps": [
        "build-essential",
        "liblz4-dev",
        "wget",
        "git",
      ],
      "buildcmd": [
        "wget ${UPDATEURL}",
        "perl devkitA64update.pl",
        "wget ${PACMANURL}",
        "sudo -E dpkg -i devkitpro-pacman.deb",
        "dkp-pacman-key --init",
        "dkp-pacman-key --populate devkitpro",
        "dkp-pacman -Syy",
        "make"
      ],
      "environment": {
        "DEVKITPRO": "/project/devkitPro",
        "DEVKITA64": "/project/devkitPro/devkitA64",
        "UPDATEURL": "https://raw.githubusercontent.com/devkitPro/installer/master/perl/devkitA64update.pl",
        "PACMANURL": "https://github.com/devkitPro/pacman/releases/download/v1.0.0/devkitpro-pacman.deb"
      },
      "artifacts": [
        "*.nro"
      ]
    }
  }
}